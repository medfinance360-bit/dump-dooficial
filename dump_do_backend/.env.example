# ============================================
# Dump.do Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Your Supabase project URL
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anon/public key (safe for client-side)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (server-side only, KEEP SECRET!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# --------------------------------------------
# LLM API Keys
# --------------------------------------------

# OpenAI API Key (default provider)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Gemini API Key (optional)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# Anthropic API Key (optional, for Claude)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# --------------------------------------------
# LLM Configuration
# --------------------------------------------

# Which LLM provider to use: openai | gemini | anthropic
LLM_PROVIDER=openai

# Model to use (leave empty for provider default)
# OpenAI: gpt-4o 
# Gemini: gemini-2.5-flash-preview-05-20
# Anthropic: claude-3-5-sonnet-20241022
LLM_MODEL=

# --------------------------------------------
# Application Settings
# --------------------------------------------

# Environment: development | staging | production
ENVIRONMENT=development

# Rate limiting (requests per minute per user)
RATE_LIMIT_MAX=20

# Session context window (number of messages to include)
MAX_CONTEXT_MESSAGES=10

# Message max length (characters)
MAX_MESSAGE_LENGTH=10000

# --------------------------------------------
# LGPD Compliance
# --------------------------------------------

# Default data retention period (days)
DEFAULT_DATA_RETENTION_DAYS=90

# --------------------------------------------
# Optional: Monitoring & Analytics
# --------------------------------------------

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# PostHog API Key for analytics (optional, LGPD compliant)
# POSTHOG_API_KEY=phc_xxx
